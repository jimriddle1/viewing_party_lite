<h2>New User</h2>
<%= form_with url: users_path, local: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password, 'password' %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation, 'password confirmation' %>
  <%= f.text_field :password_confirmation %>

  <%= f.submit 'Create User'%>
<% end %>
